@using PrOps.Classes
@model PrOps.Models.BranchSerialInputModel

@{
    ViewBag.Title = "Редактирование";
}

<h2>Редактирование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SerialNumber, htmlAttributes: new { @class = "control-label span2" })
            <div class="span10">
                @Html.EditorFor(model => model.SerialNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label span2" })
            <div class="span10">
                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IPAddress, htmlAttributes: new { @class = "control-label span2" })
            <div class="span10">
                @Html.EditorFor(model => model.IPAddress, new { htmlAttributes = new { @class = "form-control" ,@readonly= "readonly"} })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BranchNumber, htmlAttributes: new { @class = "control-label span2" })
            <div class="span10">
                @Html.EditorFor(model => model.BranchNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BranchNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="offset2 span2">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
            <div class="offset2 span2">
                <div>
                    @Html.ActionLink("Назад", "BranchSerialIndex", "BranchSerial", null,  new { @class = "btn btn-default" } )
                    
                </div>


            </div>
        </div>
    </div>
}

