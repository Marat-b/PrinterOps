@model  IEnumerable<PrOps.sp_SEL_LOAD_YResult>

@{
    ViewBag.Title = "Нагрузка за год";
}
<div class="page-header"><h4>Нагрузка за год</h4></div>

@using (Html.BeginForm())
{
<div class="row-fluid">
<div class="span2 offset2">
<span class="label label-info">Год</span>
@{
    List<SelectListItem> list = new List<SelectListItem>();
    for (int iYear = DateTime.Today.Year; iYear > 2012; iYear--)
    {
        list.Add(new SelectListItem() { Text = iYear.ToString(), Selected = iYear.ToString() == ViewBag.GetYear.ToString() ? true : false });
    }
}
@Html.DropDownList("Year", list)
</div>
<div class="span2 ">
<input type="submit" value="Выбрать" class="btn btn-info"/>
</div>

</div>
}

<div class="row-fluid">
<div class="span10">
<table class="table table-hover table-bordered">
<tr>
    <td>Серийный номер</td>
    <td>Модель</td>
    <td>Логическое имя</td>
    <td>IP адрес</td>
    <td>Распечатано страниц</td>
</tr>      
@foreach(var item in Model)
{
<tr>
    <td>@Html.DisplayFor(Item=>item.SerialNumber)</td>
    <td>@Html.DisplayFor(Item=>item.Model)</td>
    <td>@Html.DisplayFor(Item=>item.printer_name)</td>
    <td>@Html.DisplayFor(Item=>item.IPAddress)</td>
    <td>@Html.DisplayFor(Item=>item.PagePrinted)</td>
</tr>      
      
      
 }
 </table>
 </div>
 </div>